<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="notif_category"
        android:title="Obavestavanje">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/obavestavanje_key"
            android:title="Dozvoli obavestavanje" />

        <ListPreference
            android:defaultValue="toast_key"
            android:dependency="@string/obavestavanje_key"
            android:dialogTitle="Nacin obavestavanja"
            android:entries="@array/pref_splashtime_entries"
            android:entryValues="@array/pref_splashtime_values"
            android:key="@string/settings_key"
            android:summary="%s"
            android:title="Nacin obavestavanja" />


    </PreferenceCategory>

</PreferenceScreen>